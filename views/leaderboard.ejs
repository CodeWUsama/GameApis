<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/css/style.css" />
    <title>Leaderboard</title>
  </head>

  <body>
    <div class="container">
      <h1 class="text-center" style="margin: 20">Leaderboard by Kills</h1>
      <table style="width: 90%" class="table table-striped table-bordered">
        <thead>
          <tr>
            <th scope="col" style="width: 300">Username</th>
            <th scope="col">Match Played</th>
            <th scope="col">Kills</th>
            <th scope="col">Last Kills</th>
            <th scope="col">Damage</th>
            <th scope="col">Wins</th>
            <th scope="col">Loss</th>
            <th scope="col">Level</th>
            <th scope="col">Friends</th>
          </tr>
        </thead>
        <tbody>
          <% for (var feed in data1 ) { %>
          <tr>
            <td><%= data1[feed].username %></td>
            <td><%= data1[feed].totalmatchplayed %></td>
            <td><%= data1[feed].kills %></td>
            <td><%= data1[feed].lastmatchkills %></td>
            <td><%= data1[feed].damages %></td>
            <td><%= data1[feed].win %></td>
            <td><%= data1[feed].loss %></td>
            <td><%= data1[feed].level %></td>
            <td><%= data1[feed].friends %></td>
          </tr>
          <% } %>
        </tbody>
      </table>

      <h1 class="text-center" style="margin: 20">Leaderboard by Wins</h1>
      <table style="width: 90%" class="table table-striped table-bordered">
        <thead>
          <tr>
            <th scope="col" style="width: 300">Username</th>
            <th scope="col">Match Played</th>
            <th scope="col">Kills</th>
            <th scope="col">Last Kills</th>
            <th scope="col">Damage</th>
            <th scope="col">Wins</th>
            <th scope="col">Loss</th>
            <th scope="col">Level</th>
            <th scope="col">Friends</th>
          </tr>
        </thead>
        <tbody>
          <% for (var feed in data2 ) { %>
          <tr>
            <td><%= data2[feed].username %></td>
            <td><%= data2[feed].totalmatchplayed %></td>
            <td><%= data2[feed].kills %></td>
            <td><%= data2[feed].lastmatchkills %></td>
            <td><%= data2[feed].damages %></td>
            <td><%= data2[feed].win %></td>
            <td><%= data2[feed].loss %></td>
            <td><%= data2[feed].level %></td>
            <td><%= data2[feed].friends %></td>
          </tr>
          <% } %>
        </tbody>
      </table>

    </div>
  </body>
</html>
