<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/css/style.css" />
    <title>Gift Cloth</title>
  </head>

  <body>
    <div class="rootCont">
      <form class="myform" method="POST" action="/admin/giftcloth">
        <h1 class="text-center">Gift Cloth</h1>
        <div class="form-group">
          <label for="exampleInputEmail1">Username</label>
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
            placeholder="Enter Player Username"
            required
          />
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Cloth ID</label>
          <input
            type="number"
            class="form-control"
            id="cloth"
            name="cloth"
            placeholder="Enter Cloth ID"
            required
          />
        </div>
        <% if(data.error) { %>
        <h4 style="color: red; text-align: center; margin: 30">
          <h4 class="text-center" style="color: red; margin: 20">
            <%=data.error%>
          </h4>
        </h4>
        <%} %>
        <div class="center">
          <button
            type="submit"
            class="btn btn-primary"
            style="height: 60 !important; margin-right: 20;"
          >
            Send
          </button>
          <button
            type="button"
            class="btn btn-warning"
            onclick="window.location.href='/admin'"
            style="height: 60 !important"
          >
            Back to Dashboard
          </button>
        </div>
      </form>
    </div>
  </body>
</html>
